@{
    ViewData["Title"] = "Index";
}
@section Styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-treegrid/0.2.0/css/jquery.treegrid.css" integrity="sha512-71qUGiAKYenKPrbtmhOTP8I2ElEN9DBF5sxNvw3TzKYQDf2Yp8A7mnakECuMjLzJ1s4s/DICbsIlOvzINIa2Pw==" crossorigin="anonymous" />
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-treegrid/0.2.0/js/jquery.treegrid.min.js" integrity="sha512-CO5XensPF3OFwLPmDJ4oTi2h8tyOQkND2DiWEHxDb3/g8yYtnWGOS+r34jDM1/UAzcK4wKvnnCevs+OpFcP3jQ==" crossorigin="anonymous"></script>
    <script src="~/app/Controller/Role/index.js" asp-append-version="true"></script>
    <script>
        var role = new RoleController();
        role.initialize();
    </script>
}
<input type="hidden" id="hid-category-id" />
<div class="page-title">
    <div class="title_left">
        <h3>Danh sách role </h3>
    </div>

    <div class="title_right">
        <div class="col-md-6 col-sm-6 form-group pull-right">
            <div class="input-group">
                <button id="btnCreateUser" class="btn btn-success">Tạo</button>
                <input type="text" class="form-control" id="txt-search-keyword" placeholder="Tìm kiếm">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Tìm kiếm</button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row" style="display: block;">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tác vụ</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content">
                    </tbody>
                </table>
                @*Pagination*@
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" roles="status" aria-live="polite">
                            <select id="ddl-show-page">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">Bản ghi/ trang</span>
                            Tổng số bản ghi: <strong id="lbl-total-records"></strong>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_number" id="datatable-checkbox_paginate">
                            <ul id="paginationUL">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <th scope="row">
            <button class="btn btn-info btn-sm btn-grant" data-id="{{Id}}"><i class="fas fa-paperclip"></i></button>
            <button class="btn btn-primary btn-sm btn-edit" data-id="{{Id}}"><i class="fas fa-edit"></i></button>
            <button class="btn btn-danger btn-sm btn-delete" data-id="{{Id}}"><i class="fas fa-trash"></i></button>
        </th>
        <th>{{Name}}</th>
        <th>{{Description}}</th>
    </tr>
</script>

@await Html.PartialAsync("_AddEditModal")
@await Html.PartialAsync("_AssignPermission")