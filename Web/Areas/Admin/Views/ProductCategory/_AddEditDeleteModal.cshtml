                <h5 class="modal-title" id="exampleModalLongTitle">Chỉnh sửa danh mục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="horizontal-form">
                    <form id="frmEdit" role="form" class="form-horizontal">
                        <div class="form-group" style="display: flex">
                            <input type="hidden" id="hidIdM" value="0" />
                            <label for="txtName" class="col-sm-2 control-label no-padding">Tên danh mục</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txtName" placeholder="Tên danh mục" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label class="col-sm-2 control-label no-padding">Danh mục cha</label>
                            <div class="col-sm-10">
                                <input name="ddlCategoryId" class="form-control" id="ddlCategoryId" value="" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtAlias" class="col-sm-2 control-label no-padding">Alias</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtAlias" class="form-control" id="txtAlias" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtDescription" class="col-sm-2 control-label no-padding">Mô tả</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtDescription" class="form-control" id="txtDescription"></textarea>
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtOrder" class="col-sm-2 control-label no-padding">Thứ tự</label>
                            <div class="col-sm-10">
                                <input type="number" name="txtOrder" class="form-control" id="txtOrder" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtHomeOrder" class="col-sm-2 control-label no-padding">Thứ tự trên trang chủ</label>
                            <div class="col-sm-10">
                                <input type="number" name="txtHomeOrder" class="form-control" id="txtHomeOrder" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtImage" class="col-sm-2 control-label no-padding">Ảnh</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input type="text" name="txtImage" class="form-control" id="txtImage" />
                                    <input type="file" id="fileInputImage" style="display: none" />
                                    <span class="input-group-btn">
                                        <input type="button" class="btn btn-primary" id="btnSelectImg" value="Chọn ảnh" />
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtSeoTitle" class="col-sm-2 control-label no-padding">Tiêu đề SEO</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSeoTitle" class="form-control" id="txtSeoTitle" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtSeoAlias" class="col-sm-2 control-label no-padding">SEO URL</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSeoAlias" class="form-control" id="txtSeoAlias" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtSeoKeyword" class="col-sm-2 control-label no-padding">Từ khóa SEO</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSeoKeyword" class="form-control" id="txtSeoKeyword" />
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <label for="txtSeoDescription" class="col-sm-2 control-label no-padding">Mô tả SEO</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtSeoDescription" class="form-control" id="txtSeoDescription"></textarea>
                            </div>
                        </div>
                        <div class="form-group" style="display: flex">
                            <div class="col-sm-10">
                                <div class="checkbox float-right">
                                    <label>
                                        <input type="checkbox" id="ckStatus" checked="checked" />
                                        <span class="text">Active</span>
                                    </label>
                                    <label>
                                        <input type="checkbox" id="ckShowHome" />
                                        <span class="text">Hiện trên trang chủ</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-secondary" data-dismiss="modal">Lưu</button>
                <button type="button" id="btnCancel" class="btn btn-primary">Đóng</button>
            </div>
        </div>
    </div>
</div>